{
  "extends": [
    "config:base"
  ],
  "allowPostUpgradeCommandTemplating": true,
  "allowedPostUpgradeCommands": [
    "^./postUpgrade.sh {{{newVersion}}}"
  ],
  "platform": "github",
  "onboarding": false,
  "packageRules": [
    {
      "matchPackageNames": [
        "homeassistant/home-assistant"
      ],
      "matchBaseBranches": [
        "main"
      ],
      "postUpgradeTasks": {
        "commands": [
          "./postUpgrade.sh {{{newVersion}}}"
        ],
        "fileFilters": [
          "balena.yml"
        ],
        "executionMode": "update"
      }
    }
  ],
  "repositories": [
    "klutchell/balena-homeassistant"
  ],
  "rebaseWhen": "auto",
  "automerge": false,
  "labels": [
    "renovate"
  ]
}
