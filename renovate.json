{
  "extends": ["config:base"],
  "allowPostUpgradeCommandTemplating": true,
  "allowedPostUpgradeCommands": ["^sed"],
  "platform": "github",
  "onboarding": false,
  "packageRules": [
    {
      "matchPackageNames": ["homeassistant/home-assistant"],
      "matchBaseBranches": ["main"],
      "postUpgradeTasks": {
        "commands": [
          "sed \"s|^version: .*$|version: $(sed -r 's/^0*([1-9][0-9]*)\\.0*([1-9][0-9]*)\\.0*([1-9][0-9]*)$/\\1.\\2.\\3/' <<<{{{newVersion}}})|\" -i balena.yml"
        ],
        "fileFilters": ["balena.yml"],
        "executionMode": "update"
      }
    }
  ],
  "repositories": ["klutchell/balena-homeassistant"],
  "rebaseWhen": "auto",
  "automerge": false,
  "labels": ["renovate"]
}
